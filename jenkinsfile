pipeline {
    agent {
        label 'Slave'
    }
	
    stages {
        stage('Git-Checkout') {
            steps {
                    echo "Checking out from Git Repo";
                    git 'https://github.com/Levi-Michael/docker-web.git'
            }
        }
        
        stage('Build') {
            steps {
                    echo "Building the checked-out project!";
                     /* Put in the actual Code for Executing Build.bat file from your Git Repo here */
                    sh 'sudo docker build -t my-nginx:my-nginx .'

            }
        }
		stage('Deploy') {
            steps {
                  echo "Deploying to Stage Environment for more tests!";
                  sh 'sudo docker run --name my-nginx --expose 80 -d'
            }
        }
        stage('Test') {
            steps {
                  echo "Running tests!";
                  sh 'curl localhost'
            }
        }
    }
    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
        failure {
            echo 'This will run only if failed'
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
            echo 'For example, if the Pipeline was previously failing but is now successful'
        }
    }
}
